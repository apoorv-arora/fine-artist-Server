<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="in.artist.database.classes.Course" table="course">

		<id column="id" name="courseId" type="java.lang.Integer">
			<generator class="native" />
		</id>
		
		<property column="title" name="title" type="java.lang.String" />
		<property column="shortDescription" name="shortDescription" type="java.lang.String" />
		<property column="coverImageUrl" name="coverImageUrl" type="java.lang.String" />
		<property column="categoryId" name="categoryId" type="java.lang.Integer" />
		<property column="longDescription" name="longDescription" type="java.lang.String" />
		<property column="createdByImageUrl" name="createdByImageUrl" type="java.lang.String" />
	</class>
</hibernate-mapping>