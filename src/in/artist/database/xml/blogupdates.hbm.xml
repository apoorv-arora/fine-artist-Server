<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="in.artist.database.classes.BlogUpdates" table="blogupdates">

		<id column="id" name="blogId" type="java.lang.Integer">
			<generator class="native" />
		</id>
		
		<property column="title" name="title" type="java.lang.String" />
		<property column="shortDescription" name="shortDescription" type="java.lang.String" />
		<property column="longDescription" name="longDescription" type="java.lang.String" />
		<property column="refUrl" name="refUrl" type="java.lang.String" />
		<property column="refImageUrl" name="refImageUrl" type="java.lang.String" />
		<property column="created" name="created" type="java.lang.Long" />
		<property column="modified" name="modified" type="java.lang.Long" />
	</class>
</hibernate-mapping>